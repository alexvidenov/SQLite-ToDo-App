<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tag_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_tag_card"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tag_id_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:gravity="left"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tag_title"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/round_tag_container"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/todo_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tag_content_layout"
        android:layout_alignParentBottom="false"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/edit_tag_button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/ic_edit_white_24dp" />

        <ImageButton
            android:id="@+id/delete_tag_button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/ic_delete_white_24dp" />
    </LinearLayout>

</RelativeLayout>